{
  "name": "@evospec/cli",
  "version": "1.0.0",
  "description": "CLI for EvoSpec DSL validation and tooling",
  "bin": {
    "evospec": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts",
    "dev": "tsup src/index.ts --format cjs --dts --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "evospec",
    "dsl",
    "cli",
    "validator",
    "llm",
    "ai"
  ],
  "author": "EvoSpec",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evospec/evospec-dsl.git",
    "directory": "cli"
  },
  "dependencies": {
    "@evospec/validator": "workspace:*",
    "commander": "^12.1.0",
    "chalk": "^5.4.1",
    "yaml": "^2.7.0",
    "openai": "^4.77.0",
    "@anthropic-ai/sdk": "^0.33.1",
    "simple-git": "^3.27.0",
    "inquirer": "^12.3.0",
    "ora": "^8.1.1",
    "fs-extra": "^11.2.0",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/fs-extra": "^11.0.4",
    "@types/semver": "^7.5.8",
    "@types/inquirer": "^9.0.7",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
